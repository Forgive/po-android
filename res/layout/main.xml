<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:text="@string/connect" android:layout_width="wrap_content"></TextView>
<TextView android:layout_height="wrap_content" android:text="@string/inputip" android:layout_width="fill_parent"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/ipedit">
</EditText>
<TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:text="@string/inputport" android:layout_width="wrap_content"></TextView>
<EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/portedit"></EditText>
<Button android:text="@string/connect" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/connectbutton"></Button>
<TextView android:id="@+id/packettype" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
<ListView android:layout_height="wrap_content"
          android:layout_width="fill_parent" 
          android:id="@+id/serverlisting"></ListView>

</LinearLayout>
