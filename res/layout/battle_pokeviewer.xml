                android:id="@+id/pokename1">
                </TextView>
                <TextView android:layout_height="wrap_content" 
                android:text="hp1" 
                android:layout_width="wrap_content" 
                android:id="@+id/hp1">
                </TextView>
            </LinearLayout>
            <TextView android:text="TextView" 
            android:id="@+id/textView1" 
