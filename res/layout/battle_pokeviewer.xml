<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:id="@+id/battle_pokeviewerlayout">
  
    <ViewFlipper android:id="@+id/viewFlipper1" android:layout_height="fill_parent" android:layout_width="fill_parent">
   <!-- Begin Page 1 -->
    <LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:id="@+id/battlelayout">
	
	<!-- START Player A Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		>
		
		<TextView
			android:text="Timer A"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
		android:id="@+id/timerA"/>
		<TextView
			android:text="Name A"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="right|center_vertical"
		android:id="@+id/nameA"/>
		
	</LinearLayout>
	<!-- END Player A Title -->
	
	<!-- START Battle Screen -->
	<TextView
		android:text="Battle Screen"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="8"
		android:textColor="#000000"
		android:background="@drawable/battle_border"
		android:gravity="center"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
	android:id="@+id/battleScreen"/>
	<!-- END Battle Screen -->
	
	<!-- START Player B Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		>
		
		<TextView
			android:text="Name B"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="left|center_vertical"
		android:id="@+id/nameB"/>
		<TextView
			android:text="Timer B"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
		android:id="@+id/timerB"/>
		
	</LinearLayout>
	<!-- END Player B Title -->
	
	<!-- START Info Window -->
	<TextView
		android:text="Info Window"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="4"
		android:textColor="#000000"
		android:background="@drawable/battle_border"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
	android:id="@+id/infoWindow"/>
	<!-- START Info Window -->
	
	<!-- START Action Buttons -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
		
		<Button
			android:text="Attack 1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack1"/>
		<Button
			android:text="Attack 2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack2"/>
		
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		>
		
		<Button
			android:text="Attack 3"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack3"/>
		<Button
			android:text="Attack 4"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack4"/>
		
	</LinearLayout>
	<!-- END Action Buttons -->
	
	</LinearLayout>
	
<!-- Begin Page 2 -->
  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:id="@+id/pokeviewlayout">
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView1"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:text="pokename1" android:layout_width="wrap_content" android:id="@+id/pokename1"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/notinbattle" android:layout_width="wrap_content" android:id="@+id/hp1"></TextView>
            </LinearLayout>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView2"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:text="pokename2" android:layout_width="wrap_content" android:id="@+id/pokename2"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/app_name" android:layout_width="wrap_content" android:id="@+id/hp2"></TextView>
            </LinearLayout>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView3"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="pokename3" android:id="@+id/pokename3"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/tobattlescreen" android:layout_width="wrap_content" android:id="@+id/hp3"></TextView>
            </LinearLayout>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView4"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout4" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:text="pokename4" android:layout_width="wrap_content" android:id="@+id/pokename4"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/viewpokemon" android:layout_width="wrap_content" android:id="@+id/hp4"></TextView>
            </LinearLayout>
        </TableRow>
        <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView5"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout5" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:text="pokename5" android:layout_width="wrap_content" android:id="@+id/pokename5"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/inputip" android:layout_width="wrap_content" android:id="@+id/hp5"></TextView>
            </LinearLayout>
        </TableRow>
        <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/battle_border">
            <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/imageView6"></ImageView>
            <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout6" android:orientation="vertical" android:layout_width="wrap_content">
                <TextView android:layout_height="wrap_content" android:text="pokename6" android:layout_width="wrap_content" android:id="@+id/pokename6"></TextView>
                <TextView android:layout_height="wrap_content" android:text="@string/choose" android:layout_width="wrap_content" android:id="@+id/hp6"></TextView>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
    </ViewFlipper>
    
</LinearLayout>
