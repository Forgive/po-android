<de.marcreichelt.android.RealViewSwitcher
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/battlePokeSwitcher">
   <!-- Begin Page 1 -->
    <LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:id="@+id/battlelayout">
	
	<!-- START Player A Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_margin="4dp" 
		android:layout_weight="1" 
		android:layout_height="22dp">
		
		<TextView
			android:text="Timer A"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
			android:id="@+id/timerA" 
			android:layout_width="match_parent"/>
		<TextView
			android:text="Name A"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="right|center_vertical"
			android:id="@+id/nameA"/>
		
	</LinearLayout>
	<!-- END Player A Title -->
	
	<!-- START Battle Screen -->
	<TextView
		android:text="Battle Screen"
		android:layout_width="fill_parent"
		android:textColor="#000000"
		android:background="@drawable/battle_border"
		android:gravity="center"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:id="@+id/battleScreen"  
		android:layout_height="100dp" 
		android:layout_weight="30"/>
	<!-- END Battle Screen -->
	
	<!-- START Player B Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_margin="4dp" 
		android:layout_weight="1" android:layout_height="22dp">
		
		<TextView
			android:text="Name B"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="left|center_vertical"
			android:id="@+id/nameB"/>
		<TextView
			android:text="Timer B"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
			android:id="@+id/timerB" 
			android:layout_width="match_parent"/>
	</LinearLayout>
	<!-- END Player B Title -->
	
	<!-- START Info Window -->
	<ScrollView android:layout_width="match_parent" 
	android:id="@+id/infoScroll" 
	android:padding="5dp" 
	android:background="@drawable/battle_border" 
	android:layout_marginLeft="4dp" 
	android:layout_marginRight="4dp" 
	android:layout_marginTop="1dp" 
	android:layout_weight="40"
	android:layout_height="0dp">
		<TextView android:layout_width="fill_parent" 
		android:id="@+id/infoWindow" 
		android:textColor="#000000" 
		android:text="Info Box" 
		android:layout_height="wrap_content">
		</TextView>
	</ScrollView>
	<!-- END Info Window -->
	
	<!-- START Action Buttons -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="45dp" 
		android:layout_weight="10" 
		android:layout_marginTop="4dp">
		
		<Button
			android:text="Attack 1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:id="@+id/attack1"/>
		<Button
			android:text="Attack 2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:id="@+id/attack2"/>
		
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="45dp"
		android:layout_weight="10" 
		>
		<Button
			android:text="Attack 3"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:id="@+id/attack3"/>
		<Button
			android:text="Attack 4"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:id="@+id/attack4"/>
		
	</LinearLayout>
	<!-- END Action Buttons -->
	
</LinearLayout>
<!-- END Page 1 -->
	
<!-- Begin Page 2 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout1">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon1"></ImageView>
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename1"
				android:id="@+id/pokename1" android:textColor="#000000"
				android:layout_width="wrap_content" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp1"
				android:id="@+id/hp1" android:textColor="#000000"
				android:layout_width="wrap_content"></TextView>
			<TextView android:layout_height="wrap_content" android:text="ability1"
				android:id="@+id/ability1" android:textColor="#000000"
				android:layout_width="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout2">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon2"></ImageView>
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename2"
				android:id="@+id/pokename2" android:layout_width="wrap_content"
				android:textColor="#000000" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp2"
				android:id="@+id/hp2" android:layout_width="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:layout_height="wrap_content" android:text="TextView" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/ability2"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout3">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon3"></ImageView>
		<LinearLayout android:id="@+id/linearLayout3"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename3"
				android:id="@+id/pokename3" android:layout_width="wrap_content"
				android:textColor="#000000" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp3"
				android:id="@+id/hp3" android:layout_width="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:layout_height="wrap_content" android:text="TextView" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/ability3"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout4">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon4"></ImageView>
		<LinearLayout android:id="@+id/linearLayout4"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename4"
				android:id="@+id/pokename4" android:layout_width="wrap_content"
				android:textColor="#000000" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp4"
				android:id="@+id/hp4" android:layout_width="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:layout_height="wrap_content" android:text="TextView" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/ability4"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout5">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon5"></ImageView>
		<LinearLayout android:id="@+id/linearLayout5"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename5"
				android:id="@+id/pokename5" android:layout_width="wrap_content"
				android:textColor="#000000" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp5"
				android:id="@+id/hp5" android:layout_width="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:layout_height="wrap_content" android:text="TextView" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/ability5"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:background="@drawable/battle_border"
		android:layout_height="wrap_content" android:layout_weight="16"
		android:layout_width="match_parent" android:id="@+id/pokeViewLayout6">
		<ImageView android:src="@drawable/icon"
			android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:id="@+id/pokeViewIcon6"></ImageView>
		<LinearLayout android:id="@+id/linearLayout6"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<TextView android:layout_height="wrap_content" android:text="pokename6"
				android:id="@+id/pokename6" android:layout_width="wrap_content"
				android:textColor="#000000" android:textStyle="bold"></TextView>
			<TextView android:layout_height="wrap_content" android:text="hp6"
				android:id="@+id/hp6" android:layout_width="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:layout_height="wrap_content" android:text="TextView" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/ability6"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
<!-- END Page 2 -->
</de.marcreichelt.android.RealViewSwitcher>
