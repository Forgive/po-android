<?xml version="1.0" encoding="utf-8"?>
<!-- Container -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF"
	android:id="@+id/battlelayout">
	
	<!-- START Player A Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_margin="4dp" android:layout_height="25dp" android:layout_weight="1">
		
		<TextView
			android:text="Timer A"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
		android:id="@+id/timerA"/>
		<TextView
			android:text="Name A"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="right|center_vertical"
		android:id="@+id/nameA"/>
		
	</LinearLayout>
	<!-- END Player A Title -->
	
	<!-- START Battle Screen -->
	<TextView
		android:text="Battle Screen"
		android:layout_width="fill_parent"
		android:textColor="#000000"
		android:background="@drawable/battle_border"
		android:gravity="center"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
	android:id="@+id/battleScreen" android:layout_margin="4dp" android:layout_height="100dp" android:layout_weight="30"/>
	<!-- END Battle Screen -->
	
	<!-- START Player B Title -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="3dp"
		android:layout_marginLeft="4dp"
		android:layout_marginRight="4dp"
		android:layout_margin="4dp" android:layout_height="25dp" android:layout_weight="1">
		
		<TextView
			android:text="Name B"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:textColor="#000000"
			android:gravity="left|center_vertical"
		android:id="@+id/nameB"/>
		<TextView
			android:text="Timer B"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textColor="#000000"
			android:background="@drawable/battle_border"
			android:gravity="center"
		android:id="@+id/timerB"/>
		
	</LinearLayout>
	<!-- END Player B Title -->
	
	<!-- START Info Window -->
	<!-- START Info Window -->
	
	<!-- START Action Buttons -->
	<ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1" android:padding="5dp" android:background="@drawable/battle_border" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginTop="1dp" android:layout_weight="40" android:layout_height="0dp">
		<TextView android:layout_width="fill_parent" android:id="@+id/infoView" android:textColor="#000000" android:text="TEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRINGTEST STRING" android:layout_marginBottom="8dp" android:layout_height="fill_parent"></TextView>
	</ScrollView>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginTop="4dp" android:layout_margin="4dp" android:layout_height="45dp" android:layout_weight="10">
		
		<Button
			android:text="Attack 1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack1"/>
		<Button
			android:text="Attack 2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack2"/>
		
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_marginBottom="3dp" android:layout_marginTop="3dp" android:layout_margin="4dp" android:layout_height="45dp" android:layout_weight="10">
		
		<Button
			android:text="Attack 3"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack3"/>
		<Button
			android:text="Attack 4"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
		android:id="@+id/attack4"/>
		
	</LinearLayout>
	<!-- END Action Buttons -->
	
</LinearLayout>